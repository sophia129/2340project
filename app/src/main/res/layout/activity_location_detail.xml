<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    tools:context=".LocationDetail">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/BackButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:onClick="ClickedBackButton"
                android:text="&lt;"
                android:textColor="#666"
                android:textSize="30dp"
                android:typeface="serif" />

            <CheckedTextView
                android:id="@+id/TopLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Details"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textColor="#666"
                android:textSize="40sp" />

            <Button
                android:id="@+id/exitButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="0dp"
                android:text="EXIT"
                android:textColor="#ff011d33"
                android:textSize="12dp"
                android:visibility="invisible" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/midLayout"
            android:layout_width="fill_parent"
            android:layout_height="328dp"
            android:layout_alignStart="@+id/bottomLayout"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/DetailHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:isScrollContainer="true"
                android:overScrollMode="ifContentScrolls"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:text="Hello"
                android:textColor="#000000"
                android:textSize="20sp" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/viewDonations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5555CC"
                android:fontFamily="sans-serif"
                android:onClick="ViewDonations"
                android:layout_marginBottom="10dp"
                android:text="View Donations"
                android:textColor="#FFF"
                android:textSize="22sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/addDonation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#5555CC"
                android:fontFamily="sans-serif"
                android:onClick="AddDonation"
                android:text="Add Donation"
                android:textColor="#FFF"
                android:textSize="22sp"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>




</android.support.constraint.ConstraintLayout>