<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/BackButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:onClick="ClickedBackButton"
            android:text="&lt;"
            android:textColor="#666"
            android:textSize="30dp"
            android:typeface="serif" />

        <CheckedTextView
            android:id="@+id/TopLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="Main Menu"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="#666"
            android:textSize="40sp" />

        <Button
            android:id="@+id/exitButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="0dp"
            android:text="EXIT"
            android:textColor="#ff011d33"
            android:textSize="12dp"
            android:visibility="invisible" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">
        <Button
            android:id="@+id/Locations"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Locations"
            android:layout_above="@id/OrTextView"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:textColor="#FFF"
            android:background="#5555CC"
            android:onClick="ClickedLocationButton"

            tools:layout_editor_absoluteX="2sp"
            tools:layout_editor_absoluteY="398dp"/>

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="Search Inventory"
            android:layout_below="@id/Locations"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:textColor="#FFF"
            android:background="#5555CC"
            android:onClick="ClickedSearchButton"

            tools:layout_editor_absoluteX="2sp"
            tools:layout_editor_absoluteY="398dp"/>

        <Button
            android:id="@+id/maps_button"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="View Map"
            android:layout_below="@id/search_button"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:textColor="#FFF"
            android:background="#5555CC"
            android:onClick="ClickedMapsButton"

            tools:layout_editor_absoluteX="2sp"
            tools:layout_editor_absoluteY="398dp"/>

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>