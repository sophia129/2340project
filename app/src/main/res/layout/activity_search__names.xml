<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchStuff.Search_Names">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/topLayout"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <CheckedTextView
                android:id="@+id/TopLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Search Name"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textColor="#666"
                android:textSize="40sp" />


            <Button
                android:id="@+id/BackButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:onClick="ClickedBackButton"
                android:text="&lt;"
                android:textColor="#666"
                android:textSize="30dp"
                android:typeface="serif" />

        </RelativeLayout>

        <EditText xmlns:tools="http://schemas.android.com/tools"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/search_bar"
            android:background="#eee"
            android:textColor="#ff000000"
            android:hint="Search"
            android:textColorHint="#33000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/checkInventory"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/Password"
            android:text="Check Inventory"
            android:layout_above="@id/OrTextView"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:textColor="#FFF"
            android:background="#5555CC"
            android:onClick="ClickedCheckInventory"

            tools:layout_editor_absoluteX="2sp"
            tools:layout_editor_absoluteY="398dp"/>

        <ListView
            android:id="@+id/inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>