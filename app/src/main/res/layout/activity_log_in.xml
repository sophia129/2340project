<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/BackButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:onClick="ClickedBackButton"
            android:text="&lt;"
            android:textColor="#666"
            android:textSize="30dp"
            android:typeface="serif" />

        <CheckedTextView
            android:id="@+id/TopLabel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="Log In"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="#666"
            android:textSize="40sp" />

        <Button
            android:id="@+id/exitButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="0dp"
            android:text="EXIT"
            android:textColor="#ff011d33"
            android:textSize="12dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp">
        <EditText xmlns:tools="http://schemas.android.com/tools"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/Username"
            android:background="#eee"
            android:textColor="#ff000000"
            android:hint="Name"
            android:textColorHint="#33000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />
        <EditText xmlns:tools="http://schemas.android.com/tools"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/Username"
            android:id="@+id/Password"
            android:background="#eee"
            android:textColor="#ff000000"
            android:hint="Password"
            android:textColorHint="#33000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/LogIn"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/Password"
            android:text="Log In"
            android:layout_above="@id/OrTextView"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:textColor="#FFF"
            android:background="#5555CC"
            android:onClick="ClickLogIn"

            tools:layout_editor_absoluteX="2sp"
            tools:layout_editor_absoluteY="398dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>